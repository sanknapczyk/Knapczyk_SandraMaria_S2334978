<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:map="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true" android:id="@+id/scrollView">
    <!--  Starting Screen Layout  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ViewSwitcher
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewSwitcher">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to the Weather App"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contains BBC weather data from public RSS"
                    android:textAlignment="center"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/forButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FORECAST"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"/>
                <ViewFlipper android:id="@+id/weatherViewFlipper1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Glasgow"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></ImageView>
                        <TextView
                            android:id="@+id/glasgowObs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="London"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/londonObs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New York"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/newyorkObs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Oman"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/omanObs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mauritius"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/mauritiusObs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bangladesh"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/bangladeshObs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </ViewFlipper>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    >

                    <ImageButton
                        android:id="@+id/buttonPrevious1"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/arrow_prev"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/buttonNext1"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/arrow_next"
                         />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 - day forecast"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/buttonPrevious2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        map:icon="@drawable/arrow_prev"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/backButton"
                        android:text="BACK"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/buttonNext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        map:icon="@drawable/arrow_next"
                        android:layout_weight="1" />
                </LinearLayout>
                <ViewFlipper
                    android:id="@+id/weatherFlipper2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Glasgow"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/glasgowFor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="London"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/londonFor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New York"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/newyorkFor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Oman"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/omanFor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mauritius"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/mauritiusFor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bangladesh"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/bangladeshFor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </ViewFlipper>

            </LinearLayout>
        </ViewSwitcher>
    </LinearLayout>
</ScrollView>